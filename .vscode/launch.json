    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Streamlit Client (Streamlit)",
            "type": "debugpy",
            "request": "launch",
            // Launch streamlit as a module with venv python
            "module": "streamlit",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/docs/03-Tutorials/08-client-server-gpt-oss",
            "python": "${workspaceFolder}/docs/03-Tutorials/08-client-server-gpt-oss/.venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/docs/03-Tutorials/08-client-server-gpt-oss"
            },
            "args": [
                "run",
                "start_client.py",
                "--server.port",
                "8501"
            ],
            "justMyCode": false
        }
    ]
}